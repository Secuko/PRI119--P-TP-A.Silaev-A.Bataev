@model MVC.ViewModels.CreateUserViewModel
@{
    ViewBag.Title = "Добавление пользователя";
}

@{
    string[] Sex = new[] { "Мужской", "Женский" };
}

    <form asp-antiforgery="true" asp-action="Create" asp-controller="Home">
        <div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label><br />
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="SurName" class="control-label"></label><br />
                <input asp-for="SurName" class="form-control" />
                <span asp-validation-for="SurName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label><br />
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label><br />
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-outline-secondary" />
            </div>
        </div>
    </form>

    @section Scripts {@await Html.PartialAsync("_ValidationScriptsPartial")}
