@model MVC.Models.User
@{
    ViewBag.Title = "Добавление пользователя";
}

@{
    string[] Sex = new[] { "Мужской", "Женский" };
}

    <form asp-antiforgery="true" asp-action="Create" asp-controller="Home">
        <div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label><br />
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="SurName" class="control-label"></label><br />
                <input asp-for="SurName" class="form-control" />
                <span asp-validation-for="SurName"></span>
            </div>
            <div class="form-group">
                @foreach (var sex in Sex)
                {
                    <input type="radio" asp-for="Sex" value="@sex" />@sex<br />
                }
                <span asp-validation-for="Sex"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label><br />
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label><br />
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label><br />
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </div>
    </form>

    @section Scripts {@await Html.PartialAsync("_ValidationScriptsPartial")}
