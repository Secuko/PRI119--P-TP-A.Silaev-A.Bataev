@model IEnumerable<MVC.Models.User>
@{
    ViewData["Title"] = "Home Page";
}

<h1 class="display-4">Welcome</h1>
@{
    ViewBag.Title = "Все пользователи";
}
<a asp-action="Create">Добавить пользователя</a>
<br />

@if (!(User.Identity.IsAuthenticated))
{
    <a asp-controller="Account" asp-action="Register">Зарегеистрироваться</a>
    <br />
    <a asp-controller="Account" asp-action="Login">Войти</a>
}
else
{
    <a asp-controller="Account" asp-action="Logout">Выйти</a>
}

<table class="table">
    <tr><th>Имя</th><th>Email</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.SurName</td>
            <td>@user.Email</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>