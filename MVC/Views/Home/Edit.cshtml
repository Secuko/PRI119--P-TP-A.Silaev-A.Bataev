@model MVC.Models.User
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label><br />
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="SurName" class="control-label"></label><br />
        <input asp-for="SurName" class="form-control" />
        <span asp-validation-for="SurName"></span>
    </div>

    <input hidden type="password" value="@Model.Password" asp-for="Password" class="form-control" />
    <input hidden value="@Model.Sex" asp-for="Sex" class="form-control" />

    <div class="form-group">
        <label asp-for="Age" class="control-label"></label><br />
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="control-label"></label><br />
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone"></span>
    </div><br />

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>