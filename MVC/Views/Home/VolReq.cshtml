@model MVC.ViewModels.VolRequestViewModel

@{
    string[] Sex = new[] { "Мужской", "Женский" };
}

    <h1 class="profile__title">Введите данные</h1>

    <form method="post" asp-action="VolReq" asp-controller="Home" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label profile__label">Телефон</label><br />
                <input asp-for="Phone" class="form-control profile__input" />
                <span asp-validation-for="Phone"></span>
            </div>

            <div class="form-group">
                <label asp-for="Age" class="control-label profile__label">Возраст</label><br />
                <input asp-for="Age" class="form-control profile__input" />
                <span asp-validation-for="Age"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sex" class="control-label profile__label">Пол</label><br />
                @foreach (var sex in Sex)
                {
                    <input type="radio" asp-for="Sex" value="@sex" />@sex<br />
                }
                <span asp-validation-for="Sex"></span>
            </div>

            <div class="form-group">
                <label asp-for="LivArea" class="control-label profile__label">Область проживания</label><br />
                <input asp-for="LivArea" class="form-control profile__input" />
                <span asp-validation-for="LivArea"></span>
            </div>

            <input type="submit" value="Отправить" class="button-secondary profile__button" />

        </div>
    </form>
    <a class="main-link" asp-controller="Home" asp-action="Index">Назад</a>

    
