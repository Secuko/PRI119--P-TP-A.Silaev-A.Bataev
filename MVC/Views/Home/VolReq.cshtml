@model MVC.ViewModels.VolRequestViewModel

@{
    string[] Sex = new[] { "Мужской", "Женский" };
}

<h2>Введите данные</h2>

<form method="post" asp-action="VolReq" asp-controller="Home" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Phone" class="control-label">Телефон</label><br />
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone"></span>
        </div>
        <div class="form-group">
            <label asp-for="Age" class="control-label">Возраст</label><br />
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age"></span>
        </div>
        <div class="form-group">
            <label asp-for="Sex" class="control-label">Пол</label><br />
            @foreach (var sex in Sex)
            {
                <input type="radio" asp-for="Sex" value="@sex" />@sex<br />
            }
            <span asp-validation-for="Sex"></span>
        </div>
        <div class="form-group">
            <label asp-for="LivArea" class="control-label">Область проживания</label><br />
            <input asp-for="LivArea" class="form-control" />
            <span asp-validation-for="LivArea"></span>
        </div>
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>