@model MVC.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="edit" asp-controller="admin">
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя</label><br />
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="SurName" class="control-label">Фамилия</label><br />
        <input asp-for="SurName" class="form-control" />
        <span asp-validation-for="SurName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Электронный адрес</label><br />
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email"></span>
    </div><br />

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn-outline-secondary" />
    </div>
</form>