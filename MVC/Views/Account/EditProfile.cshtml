@model MVC.ViewModels.UserProfileViewModel

<div class="profile-wrapper">
    <h1 class="profile__title">Профиль</h1>
    <form method="post"
          asp-action="EditProfile"
          asp-controller="Account"
          asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Name" class="control-label profile__label">Имя:</label><br />
                <input asp-for="Name" class="form-control profile__input" />
                <span asp-validation-for="Name"></span>
            </div>

            <div class="form-group">
                <label asp-for="SurName" class="control-label profile__label">Фамилия:</label><br />
                <input asp-for="SurName" class="form-control profile__input" />
                <span asp-validation-for="SurName"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label profile__label">Электронный адрес:</label><br />
                <input asp-for="Email" class="form-control profile__input" />
                <span asp-validation-for="Email"></span>
            </div>

            <input type="submit"
                   value="Сохранить"
                   class="button-secondary profile__button" />
        </div>
    </form>
    <div class="profile__links">
        <a class="change-password profile__change-password"
           asp-controller="Account"
           asp-action="ChangePassword">Сменить пароль</a>
        <a class="main-link" asp-controller="Home" asp-action="Index">На главную</a>
    </div>
</div>