@model MVC.ViewModels.RegisterModel

@{
    string[] Sex = new[] { "Мужской", "Женский" };
}

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label><br />
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="SurName" class="control-label"></label><br />
            <input asp-for="SurName" class="form-control" />
            <span asp-validation-for="SurName"></span>
        </div>
        <div class="form-group">
            @foreach (var sex in Sex)
            {
                <input type="radio" asp-for="Sex" value="@sex" />@sex<br />
            }
            <span asp-validation-for="Sex"></span>
        </div>
        <div class="form-group">
            <label asp-for="Age" class="control-label"></label><br />
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="control-label"></label><br />
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label">Пароль</label><br />
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input type="password" asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>