@model MVC.ViewModels.RegisterModel

<h2>Регистрация</h2>

<form method="post" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Имя</label><br />
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="SurName" class="control-label">Фамилия</label><br />
            <input asp-for="SurName" class="form-control" />
            <span asp-validation-for="SurName"></span>
        </div>
        @* <div class="form-group">
        @foreach (var sex in Sex)
        {
            <input type="radio" asp-for="Sex" value="@sex" />@sex<br />
        }
        <span asp-validation-for="Sex"></span>
        </div> *@
        <div class="form-group">
            <label asp-for="Email" class="control-label">Электронный адрес</label><br />
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label">Пароль</label><br />
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="PasswordConfirm">Повторите пароль</label><br />
            <input type="password" asp-for="PasswordConfirm" class="form-control" />
            <span asp-validation-for="PasswordConfirm" />
        </div>
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>