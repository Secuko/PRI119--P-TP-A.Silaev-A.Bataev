@model MVC.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";
}

<div class="profile-wrapper">
    <h1 class="profile__title">Изменение пароля</h1>
    <form method="post"
          asp-action="ChangePassword"
          asp-controller="Account"
          asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="OldPassword" class="control-label profile__label">Старый пароль:</label><br />
                <input type="password" asp-for="OldPassword" class="form-control profile__input" />
                <span asp-validation-for="OldPassword"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewPassword" class="control-label profile__label">Новый пароль:</label><br />
                <input type="password" asp-for="NewPassword" class="form-control profile__input" />
                <span asp-validation-for="NewPassword"></span>
            </div>

            <input type="submit"
                   value="Сохранить"
                   class="button-secondary profile__button" />
        </div>
    </form>
    <div class="profile__links">
        <a class="main-link profile__main-link"
           asp-controller="Account" asp-action="EditProfile">Назад</a>
        <a class="main-link profile__main-link" asp-controller="Home" asp-action="Index">На главную</a>
    </div>
</div>