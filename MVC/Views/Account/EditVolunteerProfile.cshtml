@model MVC.ViewModels.VolunteerProfileViewModel

@{
    string[] Sex = new[] { "Мужской", "Женский" };
}

<div class="profile-wrapper">
    <h1 class="profile__title">Профиль</h1>
    <form method="post"
          asp-action="EditProfile"
          asp-controller="Account"
          asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Name" class="control-label profile__label">Имя:</label><br />
                <input asp-for="Name" class="form-control profile__input" />
                <span asp-validation-for="Name"></span>
            </div>

            <div class="form-group">
                <label asp-for="SurName" class="control-label profile__label">Фамилия:</label><br />
                <input asp-for="SurName" class="form-control profile__input" />
                <span asp-validation-for="SurName"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label profile__label">Электронный адрес:</label><br />
                <input asp-for="Email" class="form-control profile__input" />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone" class="control-label profile__label">Номер телефона:</label><br />
                <input asp-for="Phone" class="form-control profile__input" />
                <span asp-validation-for="Phone"></span>
            </div>

            <div class="form-group">
                <label asp-for="Age" class="control-label profile__label">Возраст:</label><br />
                <input asp-for="Age" class="form-control profile__input" />
                <span asp-validation-for="Age"></span>
            </div>


            <div class="form-group profile__input">
                <label asp-for="Sex" class="control-label profile__label">Пол</label><br />
                @foreach (var sex in Sex)
                {
                    <label asp-for="Sex" class="control-label profile__label">@sex</label>
                    <input class="form-check-inline" type="radio" asp-for="Sex" value="@sex" /><br />
                }
                <span asp-validation-for="Sex"></span>
            </div>

            <div class="form-group">
                <label asp-for="LivArea" class="control-label profile__label">Область проживания:</label><br />
                <input asp-for="LivArea" class="form-control profile__input" />
                <span asp-validation-for="LivArea"></span>
            </div>

            <input type="submit"
                   value="Сохранить"
                   class="button-secondary profile__button" />
        </div>
    </form>
    <div class="profile__links">
        <a class="change-password profile__change-password"
           asp-controller="Account"
           asp-action="ChangePassword">Сменить пароль</a>
        @if (User.IsInRole("admin"))
        {<a class="profile__main-link main-link" asp-controller="Admin" asp-action="AdminPanel">Управление</a>}
        <a class="profile__main-link main-link" asp-controller="Account" asp-action="GetChats">Чаты</a>
        <a class="main-link" asp-controller="Home" asp-action="Index">На главную</a>
    </div>
</div>