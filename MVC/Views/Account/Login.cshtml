@model MVC.ViewModels.LoginModel

<div class="profile-wrapper">
    <h1 class="profile__title">Вход на сайт</h1>
    <form method="post"
          asp-action="Login"
          asp-controller="Account"
          asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Email" class="control-label profile__label">Email:</label><br />
                <input asp-for="Email" class="form-control profile__input" />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label profile__label">Пароль:</label><br />
                <input type="password" asp-for="Password" class="form-control profile__input" />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="form-group">
                <label asp-for="RememberMe" class="control-label profile__label"></label><br />
                <input asp-for="RememberMe" class="profile__input" />
            </div>

            <input type="submit"
                   value="Войти"
                   class="button-secondary profile__button" />
        </div>
    </form>
    <div class="profile__links">
        <a class="main-link profile__main-link" asp-controller="Account" asp-action="Register">Регистрация</a>
        <a class="main-link profile__main-link" asp-controller="Home" asp-action="Index">На главную</a>
    </div>
</div>

@section Scripts {@await Html.PartialAsync("_ValidationScriptsPartial")}