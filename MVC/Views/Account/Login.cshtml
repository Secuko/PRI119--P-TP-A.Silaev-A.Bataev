@model MVC.ViewModels.LoginModel

<h2>Вход на сайт</h2>

<form  method="post" asp-action="Login" asp-controller="Account"  asp-route-returnUrl="@Model.ReturnUrl" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email" class="control-label">Введите Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label">Введите пароль</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="RememberMe" class="control-label"></label><br />
            <input asp-for="RememberMe" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </div>
    </div>
</form>

@section Scripts {@await Html.PartialAsync("_ValidationScriptsPartial")}